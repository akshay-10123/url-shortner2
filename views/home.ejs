<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>URL Shortener</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1a1a1a;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            color: #ffffff;
        }
        #div1 {
            margin: 5%;
            padding: 5%;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        h1 {
            color: #ffffff;
            margin: 0;
        }
        .button-container {
            display: flex;
            gap: 10px;
        }
        .button {
            background-color: #2563eb;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
        }
        .button:hover {
            background-color: #1d4ed8;
        }
        form {
            background-color: #2d2d2d;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            width: 300px;
            display: flex;
            flex-direction: column;
            margin-bottom: 20px;
        }
        label {
            margin-bottom: 8px;
            font-weight: bold;
            color: #ffffff;
        }
        input[type="text"] {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #404040;
            border-radius: 4px;
            width: 100%;
            background-color: #333333;
            color: #ffffff;
        }
        input[type="text"]::placeholder {
            color: #888888;
        }
        button {
            background-color: #2563eb;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        button:hover {
            background-color: #1d4ed8;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #2d2d2d;
        }
        th, td {
            padding: 10px;
            border: 1px solid #404040;
            text-align: left;
        }
        th {
            background-color: #2563eb;
            color: #fff;
        }
        tr:nth-child(even) {
            background-color: #333333;
        }
        a {
            color: #60a5fa;
            text-decoration: none;
        }
        a:hover {
            color: #93c5fd;
        }
    </style>
   
</head>
<body>
    <%- include('./partials/nav') %>
    
    <% if (locals.id) { %>
        <p>URL generated: <a href="/url/<%= id %>">
            <%= process.env.SHORT_URL %>/url/<%= id %>
        </a></p>
    <% } %>
    
    <div id="div1">
        <form method="post" action="/url">
            <label>Enter Your Original URL:</label>
            <input type="text" name="url" placeholder="https://example.com" required />
            <button type="submit">Generate</button>
        </form>
    </div>
    
    <div>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S.no</th>
                        <th>Short id</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= url.shortId %></td>
                            <td><a href="/url/<%= url.shortId %>"><%= url.redirectURL %></a></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
    
    <%- include('./partials/scripts') %>
</body>
</html>